# Appraisals for testing against multiple Rails component versions
# We only need activesupport, actionpack, and railties, not the full Rails framework

appraise "rails-5.0" do
  gem "activesupport", "~> 5.0.0"
  gem "actionpack", "~> 5.0.0"
  gem "railties", "~> 5.0.0"
end

appraise "rails-5.1" do
  gem "activesupport", "~> 5.1.0"
  gem "actionpack", "~> 5.1.0"
  gem "railties", "~> 5.1.0"
end

appraise "rails-5.2" do
  gem "activesupport", "~> 5.2.0"
  gem "actionpack", "~> 5.2.0"
  gem "railties", "~> 5.2.0"
end

